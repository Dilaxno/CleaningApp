# SECURITY CONFIGURATION TEMPLATE
# Copy this to .env and fill in the values

# CORS Configuration - Restrict to your domains only
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# CSRF Protection - Enable in production
CSRF_ENABLED=true

# Security Headers - Always enable
SECURITY_HEADERS_ENABLED=true

# Rate Limiting - Configure Redis for production
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Database Security
DATABASE_URL=postgresql://user:password@localhost/cleanenroll
POOL_SIZE=20
MAX_OVERFLOW=30

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id

# Email Security
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# SMTP Encryption Key - Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SMTP_ENCRYPTION_KEY=your-fernet-key-here

# File Upload Security
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/webp,image/gif

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=your-bucket-name

# Webhook Security
DODO_WEBHOOK_SECRET=your-webhook-secret

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Production Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security Monitoring
ENABLE_SECURITY_LOGGING=true
SECURITY_LOG_LEVEL=WARNING

# Session Security
SESSION_TIMEOUT=3600  # 1 hour
TOKEN_REFRESH_THRESHOLD=300  # 5 minutes

# Additional Security Headers
HSTS_MAX_AGE=31536000  # 1 year
CSP_REPORT_URI=https://yourdomain.com/csp-report